<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mon"
                style="@style/custom_checkbox"
                android:text="Mon" />

            <CheckBox
                android:id="@+id/tue"
                style="@style/custom_checkbox"
                android:text="Tue" />

            <CheckBox
                android:id="@+id/wed"
                style="@style/custom_checkbox"
                android:text="Wed" />

            <CheckBox
                android:id="@+id/thu"
                style="@style/custom_checkbox"
                android:text="Thu" />
        </LinearLayout>


    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/fri"
            style="@style/custom_checkbox"
            android:text="Fri" />

        <CheckBox
            android:id="@+id/sat"
            style="@style/custom_checkbox"
            android:text="Sat" />

        <CheckBox
            android:id="@+id/sun"
            style="@style/custom_checkbox"
            android:text="Sun" />
    </LinearLayout>

</LinearLayout>
