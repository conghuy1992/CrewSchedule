<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_mail_attach_background"
    android:layout_marginTop="@dimen/dimen_4_8"
    android:layout_marginBottom="@dimen/dimen_4_8"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgMailCreateItemAttachDownload"
        android:src="@drawable/detail_download_attach_ic"
        android:background="@color/transparent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimen_4_8"
        />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearInfoAttach"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/imgMailCreateItemAttachDownload"
            android:layout_marginRight="@dimen/dimen_18_36">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:layout_marginBottom="@dimen/dimen_4_8"
                android:layout_marginTop="@dimen/dimen_4_8"
                android:id="@+id/txtMailCreateItemAttachFileName"
                android:textSize="@dimen/text_14_28"
                android:textColor="@android:color/black"
                android:text="@string/string_attach"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_4_8"
                android:layout_marginTop="@dimen/dimen_4_8"
                android:id="@+id/txtMailCreateItemAttachFileSize"
                android:textSize="@dimen/text_14_28"
                android:textColor="@color/gray_compose_mail"
                android:text="@string/string_size"
                />
        </LinearLayout>

    <ImageButton
        android:layout_width="@dimen/dimen_15_30"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_4_8"
        android:layout_marginTop="@dimen/dimen_4_8"
        android:layout_marginRight="@dimen/dimen_4_8"
        android:id="@+id/imgMailCreateItemAttachDelete"
        android:src="@drawable/add_delete_attach_ic"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:visibility="gone"
        />
    </RelativeLayout>

</LinearLayout>